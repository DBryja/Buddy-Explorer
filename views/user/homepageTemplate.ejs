<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1" />
    <title>Document</title>
    <style>
      header {
        margin: 0 !important;
      }
    </style>
  </head>
  <body>
    <%- include("../components/header"); %><!-- -->
    <div class="measure-wd"></div>

    <div class="wrapper wrapper--signup">
      <div class="background">
        <video class="video" src="/img/mountains_backwards.webm" autoplay muted loop></video>
      </div>
      <div class="content">
        <div class="content--card card">
          <h1>Zacznij zwiedzać z <br /><span>Buddy Explorer</span></h1>
          <a class="btn btn--green btn--search btn--scaleUp" href="/search">Szukaj kompana</a>
          <a class="btn btn--green btn--search btn--scaleDown" href="/guide/signup">Zostań przewodnikiem</a>
        </div>
      </div>
    </div>

    <% if (typeof libs !== 'undefined') { %> <% for (let lib of libs) { %>
    <script src="/libs/<%= lib %>.js" type="text/javascript"></script>
    <% } } %>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        setTimeout(() => {
          const height = getAbsoluteHeight(".measure-wd") - getAbsoluteHeight("header");
          document.querySelector(".wrapper--signup").style.height = `${height}px`;
        }, 15);
      });
    </script>
  </body>
</html>
