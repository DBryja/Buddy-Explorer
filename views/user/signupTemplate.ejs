<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>GUIDE REGISTER</h1>
    <form method="POST">
      <input type="text" placeholder="e-mail" class="email" name="email" required />
      <input type="text" placeholder="nazwa" class="name" name="name" required />
      <input type="number" placeholder="cena" class="price" name="price" required />
      <input type="password" placeholder="hasło" class="password" name="password" required />
      <input type="password" placeholder="powtórz hasło" class="password" name="confirm" required />
      <div class="regions__container">
        <select name="region" required autocomplete="off">
          <option disabled selected>powiat</option>
          <% data.regions.forEach(obj=>{ %>
          <option value="<%=obj.region%>"><%=obj.region%></option>
          <% }); %>
        </select>
      </div>

      <button class="region__add">dodaj powiat</button>
      <button class="region__remove">odejmij powiat</button>
      <button>zarejestruj</button>
    </form>
    <script>
      document.querySelector(".region__add").addEventListener("click", (e) => {
        e.preventDefault();
        const extra = document.createElement("select");
        extra.setAttribute("name", "region");
        extra.setAttribute("required", "");
        extra.setAttribute("autocomplete", "off");
        extra.classList.add("region__extra");
        extra.innerHTML = `
        <option disabled selected>powiat</option>
          <% data.regions.forEach(obj=>{ %>
          <option value="<%=obj.region%>"><%=obj.region%></option>
          <% }); %>
        `;
        document.querySelector(".regions__container").appendChild(extra);
      });
      document.querySelector(".region__remove").addEventListener("click", (e) => {
        e.preventDefault();
        const container = document.querySelector(".regions__container");
        const extraRegions = document.querySelectorAll(".region__extra");
        container.removeChild(extraRegions[extraRegions.length - 1]);
      });
    </script>
  </body>
</html>
